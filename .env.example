# Пример файла .env - скопируйте в .env и заполните реальными значениями

# ОБЯЗАТЕЛЬНЫЕ - приложение не запустится без них
SECRET_KEY=your-very-strong-secret-key-here-at-least-32-chars
SECRET_KEY_JWT=your-jwt-secret-key-here-different-from-above
ADMIN_LOGIN=admin
ADMIN_PASSWORD=strong-admin-password-here
BOT_TOKEN=1234567890:AABBCCDDEEFFGGHHIIJJKKLLMMNNOOPPQq

# Основные настройки
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Telegram (опциональные)
ADMIN_TELEGRAM_ID=123456789
BOT_LINK=https://t.me/your_bot
INVITE_LINK=https://t.me/your_bot
GROUP_ID=-1001234567890
FOR_LOGS=-1001234567890

# Платежные системы (опциональные)
YOKASSA_ACCOUNT_ID=123456
YOKASSA_SECRET_KEY=test_ABC123def456

# Rubitime (опциональные)
RUBITIME_API_KEY=your-api-key
RUBITIME_BASE_URL=https://rubitime.ru/api2/
RUBITIME_BRANCH_ID=12595
RUBITIME_COOPERATOR_ID=25786

# URLs
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Email (опциональные)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# Логирование
LOG_LEVEL=INFO