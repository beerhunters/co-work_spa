# Основные настройки приложения
DEBUG=false
ENVIRONMENT=development
HOST=localhost
PORT=8000
APP_NAME="Coworking API"
APP_VERSION="1.0.0"

# Сетевые настройки
API_BASE_URL=http://localhost:8000
API_BASE_URL_EXTERNAL=http://localhost:8000/api
FRONTEND_URL=http://localhost
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# Домен (для продакшена)
DOMAIN_NAME=your-domain.com

# Безопасность
# ВАЖНО: Сгенерируйте сильные ключи для продакшена!
# Команда: python -c "import os; print(os.urandom(32).hex())"
SECRET_KEY=your-secret-key-change-me
SECRET_KEY_JWT=your-jwt-secret-key-change-me
ACCESS_TOKEN_EXPIRE_HOURS=24

# Администратор
# ВАЖНО: Измените логин и пароль для продакшена!
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin

# Telegram Bot
# Получите токен у @BotFather
BOT_TOKEN=your-bot-token-here
ADMIN_TELEGRAM_ID=your-telegram-id
BOT_LINK=https://t.me/your_bot
INVITE_LINK=https://t.me/your_bot
GROUP_ID=your-group-id

# Telegram логирование (опционально)
TELEGRAM_LOGGING_ENABLED=true
FOR_LOGS=your-logs-channel-id
TELEGRAM_LOG_MIN_LEVEL=ERROR
TELEGRAM_LOG_RATE_LIMIT=5

# YooKassa (платежи)
# Получите в личном кабинете YooKassa
YOKASSA_ACCOUNT_ID=your-account-id
YOKASSA_SECRET_KEY=your-secret-key

# Rubitime (внешняя система бронирования)
RUBITIME_API_KEY=your-api-key
RUBITIME_BASE_URL=https://rubitime.ru/api2/
RUBITIME_BRANCH_ID=12595
RUBITIME_COOPERATOR_ID=25786

# База данных
DB_TIMEOUT=60
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=0.1

# Файлы и лимиты
FILE_RETENTION_DAYS=30
MAX_FILE_SIZE_MB=10
NEWSLETTER_MAX_PHOTOS=10
NEWSLETTER_MAX_FILE_SIZE_MB=20
NEWSLETTER_RATE_LIMIT_DELAY=0.05

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_TO_FILE=true

# Кэширование Redis
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=300
CACHE_DASHBOARD_TTL=60
CACHE_USER_DATA_TTL=600
CACHE_STATIC_DATA_TTL=1800

# Внешние URL (заменить на рабочий домен при деплое)
ADMIN_URL=https://t.me/your_admin
RULES_URL=https://example.com/rules